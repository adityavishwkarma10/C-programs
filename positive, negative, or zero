//Check whether a number is positive, negative, or zero
#include <stdio.h>
void main (){
    float num;
    printf("---------- Program Check whether a number is positive, negative, or zero ----------\n");
    printf("Enter the number that you want to check-");
    scanf("%f",&num);
    if (num!=0){
        if(num>0)
        printf("Number %f is Positive",num);
        else 
        printf("Number %f is Negative ",num);}
    else 
    printf("Entered Number %f is Zero",num);
    
}
